    "happy-dom": "^10.11.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.0.3",
    "typescript": "~5.2.2",
    "unocss": "^0.55.3",
    "unplugin-auto-import": "^0.16.6",
    "vite": "^4.4.9",
